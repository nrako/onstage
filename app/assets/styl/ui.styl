buttonFontSize = 1.8em
logoFontSize = 2.5em
menuTextSize = 1.2em;


#main
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0,0,0, 0.9)
#layout.player
  background-color: #fff
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  display: flex
  flex-direction: column

#stage
  overflow: hidden
  flex: 1 1 auto;

#menu
  z-index:4
  user-select: none

  a.logo
    text-decoration: none
    text-shadow: 2px 0px 4px #000;
    z-index: 10
    color: #fff
    opacity: 0.4
    position: absolute
    font-size: logoFontSize
    right: 0.3em
    top: -1.2em
    &:hover
      opacity: 0.9
      text-decoration: none

  &.hover
    position: fixed
    margin-top: 30px
    //margin-bottom: -25px
    bottom: 0
    width: 100%

#menu .bar
  display: flex
  background: linear-gradient(top, rgba(125,125,125,1) 6%,  rgba(65,65,65,1) 4%, rgba(35,35,35,1) 84%)
  border-top: 1px solid rgba(0,0,0,0.2)
  box-shadow: inset 1px 0px 0px 1px rgba(45,45,45,0.4)

  > div
    flex: 1 1
    display: flex
    align-items: center

  .middle
    justify-content: center

  .right
    justify-content: flex-end

  a.btn
    display: block
    font-size: buttonFontSize
    width: buttonFontSize
    color: #bbb
    text-decoration: none
    text-align: center
    text-shadow: 1px 1px 1px #000
    border-right: 1px solid rgba(0,0,0,0.5)
    box-shadow: inset 0px -1px 0px 1px rgba(100,100,100,0.2)
  a.btn:first-child
    border-left: 1px solid rgba(0,0,0,0.5)

  a.btn.down:not(.disabled)
  a.btn.toggleon
    color: #13DAEC
    text-shadow: 0px 0px 1px #eee
    background: linear-gradient(top, rgba(0,0,0,0.3), rgba(0,0,0, 0.2))
    box-shadow: inset 0px -1px 3px 1px rgba(0,0,0,0.4)

  a.btn:hover:not(.disabled):not(.down)
    transition: color .5s
    color: #fff
    text-shadow: 0px 0px 1px #eee

  a.btn.disabled
    color: #555
    background: #474747
    text-shadow: 0 0 1px black
    cursor: not-allowed

  a.btn.on
  a.btn.toggleon
    color: #13DAEC


  .numSlide
    margin-left: 10px
    color: #fff
  .nbSlides
    text-decoration: none
    color: #888
    display: inline-block
    width: 1.5em
    &:hover
      color: #fff
  .pagingSep
    color: #888
    margin: 0 0.3em;

  .numSlide
  .nbSlides
  .pagingSep
    font-size: menuTextSize

#progress
  transition: top .4s ease-in-out, height .4s ease-in-out
  position: absolute
  width: 100%
  top: -3px
  height: 3px
  background-color: rgba(0, 0, 0, 0.6)
  span
    transition: width .3s
    height: 100%
    display: block
    width: 40%
    background-color: #13DAEC
    opacity: 0.8

#menu:hover
  #progress
    top: -10px
    height: 10px

mediaQueries(percent)
  #menu .bar
    a.btn
      font-size: buttonFontSize * percent
      width: buttonFontSize * percent
    .numSlide
    .nbSlides
    .pagingSep
      font-size: menuTextSize * percent

  #menu a.logo
    font-size: logoFontSize * percent

#canvas.expose
  background-color: #222

@media (max-height: 480px)
  mediaQueries(0.8)

@media (max-width: 640px)
  mediaQueries(0.8)
