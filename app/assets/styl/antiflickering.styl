//anti flickering measures
antiflickering()
  // not sure that backface-visiblity prevent anything but it might help
  backface-visibility: hidden;

  // for all (blocks) elements
  > *
    transform: translate3d(0%,0%,1px)

  // transform doesn't works on inline elements yet!
